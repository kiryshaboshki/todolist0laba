<Window x:Class="todolist0laba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мой To-Do List" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#f0f8ff">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#4682b4" Margin="10" CornerRadius="10">
            <StackPanel Margin="15">
                <TextBlock Text="Календарь" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Margin="10" 
                           HorizontalAlignment="Center"
                           Foreground="White"/>

                <Border Background="White" Margin="10" CornerRadius="5" Padding="5">
                    <Calendar x:Name="TasksCalendar" 
                              Margin="5"
                              SelectedDatesChanged="TasksCalendar_SelectedDatesChanged"/>
                </Border>

                <TextBlock Text="Задачи на выбранную дату:" 
                           FontWeight="Bold" 
                           Margin="10,20,10,5"
                           Foreground="White"/>

                <Border Background="#5f9ea0" CornerRadius="5" Padding="8" Margin="10,0,10,10">
                    <TextBlock x:Name="SelectedDateText" 
                               Text="{Binding ElementName=TasksCalendar, Path=SelectedDate, StringFormat='dd MMMM yyyy'}" 
                               FontSize="12" 
                               Foreground="White"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </Border>

                <Button x:Name="ShowAllButton"
                        Content="Показать все задачи"
                        Margin="10,5,10,10"
                        Height="30"
                        Background="#ff7f50"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="ShowAllButton_Click"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="White" Margin="10" CornerRadius="10">
            <StackPanel Margin="20">
                <TextBlock Text="Мой To-Do List" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           Margin="10" 
                           HorizontalAlignment="Center"
                           Foreground="#2f4f4f"/>

                <Border Background="#f5f5f5" Padding="15" Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="NewTaskTextBox" 
                                 Width="250" 
                                 Height="30" 
                                 Text="Введите новую задачу"
                                 FontSize="14"
                                 Padding="5"/>
                        <Button x:Name="AddButton" 
                                Content="Добавить" 
                                Margin="15,0,0,0"
                                Width="80"
                                Height="30"
                                Background="#32cd32"
                                Foreground="White"
                                FontWeight="Bold"
                                Click="AddButton_Click"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="Список задач:" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="10,20,10,10"
                           Foreground="#2f4f4f"/>

                <Border Background="#f5f5f5" Padding="2" Margin="10">
                    <ListBox x:Name="TasksListBox" 
                             Height="300" 
                             Background="White">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" Margin="2" Padding="8">
                                    <StackPanel>
                                        <CheckBox Content="{Binding Title}" 
                                                  IsChecked="{Binding IsCompleted}"
                                                  FontSize="14"/>
                                        <TextBlock Text="{Binding DueDate, StringFormat='Дата: {0:dd.MM.yyyy}'}"
                                                   FontSize="11"
                                                   Foreground="#666"
                                                   Margin="20,2,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <Button x:Name="DeleteButton" 
                        Content="Удалить выбранную" 
                        Margin="10,15,10,10"
                        Height="35"
                        Background="#dc143c"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="DeleteButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>