<Window x:Class="todolist0laba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мой To-Do List" 
        Height="600" 
        Width="800">

    <StackPanel Margin ="20">
        <TextBlock Text="My To-Do List"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="10"
                   HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBox x:Name="NewTaskTextBox"
                     Width="200"
                     Height="25"
                     Text="Введите новую задачу"/>
            <Button x:Name="AddButton"
                    Content="Добавить"
                    Margin="10, 0, 0, 0"
                    Click="AddButton_Click"/>
        </StackPanel>

        <TextBlock Text="Список задач:" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="10,20,10,5"/>

        <ListBox x:Name="TasksListBox" 
                 Height="300" 
                 Margin="10"/>

        
        <Button x:Name="DeleteButton" 
                Content="Удалить выбранную" 
                Margin="10"
                Click="DeleteButton_Click"/>
    </StackPanel>

</Window>